<h1>Listing emails</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>To field</th>
    <th>From field</th>
    <th>Headers</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.subject %></td>
    <td><%= email.to_field %></td>
    <td><%= email.from_field %></td>
    <td><%= email.headers %></td>
    <td><%= email.body %></td>
    <td><%= link_to 'Show', email %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

